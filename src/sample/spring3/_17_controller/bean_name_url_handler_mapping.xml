<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean name="/hello" class="sample.spring3._17_controller._05_HandlerMappingTest$Controller1">
		<property name="url" value="/hello" />
	</bean>
	
	<bean name="/hello/world" class="sample.spring3._17_controller._05_HandlerMappingTest$Controller1">
		<property name="url" value="/hello/world" />
	</bean>
	
	<bean name="/multi/*" class="sample.spring3._17_controller._05_HandlerMappingTest$Controller1">
		<property name="url" value="/multi/*" />
	</bean>
	
	<bean name="/root/**/sub" class="sample.spring3._17_controller._05_HandlerMappingTest$Controller1">
		<property name="url" value="/root/**/sub" />
	</bean>
	
	<bean name="/s*" class="sample.spring3._17_controller._05_HandlerMappingTest$Controller1">
		<property name="url" value="/s*" />
	</bean>
	
</beans>
